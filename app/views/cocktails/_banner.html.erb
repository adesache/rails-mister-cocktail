<div class="banner">
  <div class="container">
    <h1 class="mb-3">Le Wagon Blender brings great cocktails to creative bartenders</h1>
    <p class="mb-5">Change your night life with the best recipes cocktails in the world.</p>

    <%= simple_form_for @cocktail do |f| %>
    <div class="d-flex justify-content-start">
      <%= f.input :name, placeholder: 'My terrific cocktail', label: false, input_html: { class: 'flex-grow rounded-pill' } %>
      <div>
        <%= f.submit class: 'btn btn-primary mb-2 ml-2 rounded-pill' %>
      </div>
    </div>
    <% end %>

  </div>
</div>
